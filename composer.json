{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-PDO": "^7.4",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    }
}
