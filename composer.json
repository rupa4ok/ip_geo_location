{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-PDO": "^7.4",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "psr/cache": "^1.0",
        "psr/simple-cache": "^1.0",
        "psr/log": "^1.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
